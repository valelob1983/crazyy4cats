<%= form_with(model: publication, class: "container mt-4") do |form| %>
  <% if publication.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h4>
      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
        
          
          <div class="form-group">
            <%= form.label :title, class: "font-weight-bold" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :content, class: "font-weight-bold" %>
            <%= form.text_area :content, class: "form-control", rows: 5 %>
          </div>

          <div class="form-group text-center mt-3">
          <% if publication.new_record? %>
            <%= form.submit "Crear", class: "btn btn-primary btn-sm" %>
          <% else %>
            <%= form.submit "Editar", class: "btn btn-primary btn-lg" %>
          <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

